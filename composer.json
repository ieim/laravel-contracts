{
    "name": "ieim/laravel-contracts",
    "type": "library",
    "description": "Set of interfaces which help me to structure laravel projects.",
    "keywords": [
        "ieim",
        "laravel-contracts"
    ],
    "homepage": "https://github.com/ieim/laravel-contracts",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Eichenseher",
            "email": "this@marceichenseher.de",
            "homepage": "https://marceichenseher.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1"
    },
    "require-dev": {
        "illuminate/contracts": "^6.6",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Ieim\\LaravelContracts\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ieim\\LaravelContracts\\Tests\\": "tests/Units",
            "Ieim\\LaravelContracts\\Dummies\\": "tests/Dummies"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
